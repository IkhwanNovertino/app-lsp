<div id="modalJawaban" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="closed">&times;</span>
      <h2>Form Jawab Pertanyaan</h2>
    </div>
    <div class="modal-body">
      <form action="/forum/comment" method="post">
        <input type="hidden" name="_id" id="_id">
        <input type="text" name="name" id="name" placeholder="Nama Lengkap wajib diisi" required>
        <textarea name="answer" id="answer" cols="70" rows="3" placeholder="Tulis jawaban" required></textarea>
        <button type="submit" class="btn">Kirim</button>
      </form>
    </div>
  </div>

</div>

