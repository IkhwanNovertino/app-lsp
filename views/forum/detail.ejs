<script>
  const btnJawab = document.getElementById('btnanswer');
  const modalJawab = document.getElementById('modalJawaban')
  const spand = document.getElementsByClassName("closed")[0];
  const idForum = btnJawab.getAttribute('name')
  const inputId = document.getElementById('_id');
  inputId.setAttribute('value', idForum);

btnJawab.onclick = function () {
  modalJawab.style.display = "block";
}

spand.onclick = function () {
  modalJawab.style.display = "none";
}

window.onclick = function (event) {
  if (event.target == modalJawab) {
    modalJawab.style.display = "none";
  }
}
</script>
